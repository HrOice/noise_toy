{
  "name": "react-noise-monitor",
  "version": "1.0.0",
  "description": "A React application that monitors audio levels and displays visual feedback.",
  "main": "src/index.tsx",
  "scripts": {
    "start": "export SET NODE_OPTIONS=--openssl-legacy-provider && react-scripts start",
